---
interface Props {
    class?: string;
    size?: string; 
}

const props = Astro.props;
const size = props.size || 'w-32 h-32';
---
<img
    id="avatar"
    src="/OnurAvatar.jpeg"
    alt="Onur Avatar"
    class={`${size} object-cover rounded-full cursor-pointer ${props.class || ''}`}
    onclick="window.location.href='/'"
/>
