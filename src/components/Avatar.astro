---
interface Props {
    class?: string;
    size?: string; 
}

const props = Astro.props;

// Default responsive sizes for the avatar
const defaultSize = 'w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 lg:w-24 lg:h-24 xl:w-32 xl:h-32';
const size = props.size || defaultSize;
---
<img
    id="avatar"
    src="/OnurAvatar.jpeg"
    alt="Onur Avatar"
    class={`${size} object-cover rounded-full cursor-pointer ${props.class || ''}`}
    onclick="window.location.href='/'"
/>
