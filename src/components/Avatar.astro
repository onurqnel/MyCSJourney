---
interface Props {
  class?: string;
  size?: string;
}

const props = Astro.props;
// Base size is smaller (w-12 h-12) for small screens like iPhone.
// Sizes increase for medium and larger screens.
const defaultSize = "w-12 h-12 md:w-16 md:h-16 lg:w-20 lg:h-20 xl:w-32 xl:h-32";
const size = props.size || defaultSize;
---

<img
  id="avatar"
  src="/OnurAvatar.jpeg"
  alt="Onur Avatar"
  class={`${size} object-cover rounded-full cursor-pointer transition-transform duration-300 scale-80 hover:scale-110 ${props.class || ""}`}
  onclick="window.location.href='/'"
/>
